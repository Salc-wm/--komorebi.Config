{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.34/schema.bar.json",

  "font_size": 15,
  "font_family": "JetBrains Mono",

  "icon_scale": 1.2,

  "transparency_alpha": 140,

  "monitor": {
    "index": 0,
    "work_area_offset": {
      "left": -15,
      "top": 8,
      "right": -30,
      "bottom": -5
    }
  },

  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "accent": "Crust"
  },

  "viewport": {
    "inner_size": {
      // You size monitor
      "x": 1920,

      // 20 is the default value for the height; if you want to increase the height you can try
      // doubling the y value as a starting point and then iterating from there
      "y": 23,
    }
  },

  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": true
        },
        "layout": { "enable": true },
        "focused_window": {
          "enable": false,
          "show_icon": true
        }
      }
    }
  ],
  "right_widgets": [
    { "Update":  {"enable": true} },
    { "Media":   {"enable": true} },
    { "Storage": {"enable": false} },
    { "Memory":  {"enable": false} },
    {
      "Network": {
        "enable": true,
        "show_total_data_transmitted": false,
        "show_network_activity": true
      }
    },
    {
      "Date": {
        "enable": false,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Time": {
        "enable": false,
        "format": "TwentyFourHour"
      }
    },

    { "Battery": { "enable": false } }
  ]
}
